import pygame
import math
from game import Game

pygame.init()
pygame.font.init()



#génerer la fenétre du jeu
#création du nom sur le page du jeu
pygame.display.set_caption("the sympathetic game")

# édition de la taille de la fenêtre qui prend environ tout l'écran de jeu
fenetre = pygame.display.set_mode((1366,768))
myfont = pygame.font.SysFont('Helvetic', 20)

#mettre un fond d'écran de début sur le jeu
background = pygame.image.load('assets/1.jpeg')
background = pygame.transform.scale(background, (1366, 768))

#mettre un bouton play
play_button = pygame.image.load('assets/play_button.png')
play_button = pygame.transform.scale(play_button, (400,150))
play_button_rect = play_button.get_rect()
play_button_rect.x = math.ceil(fenetre.get_width()/ 3.33)
play_button_rect.y = math.ceil(fenetre.get_width()/2)

#importer et charger le bouton pour lancer la partie

#boucle tant que cette condition et vraie
running=True

while running:

    #applique le background du jeu
    fenetre.blit(background, (0,0))

    #mettre à jour l'écran
    pygame.display.flip()

    #applique le bouton qui démarre le jeu
    fenetre.blit(play_button, play_button_rect)


    #si le joueur ferme la fenetre
    for event in pygame.event.get():
        #que l'evenemenet est fermeture de fenetre
        if event.type== pygame.QUIT:
            running=False
            pygame.quit
        #detecter si un joueur lache une projectile
        elif event.type == pygame.KEYDOWN:
            Game.pressed[event.key] = True

            #détecter si la touche est éclanché
            #if event.key == pygame.K_SPACE:
        elif event.type == pygame.KEYUP:
            Game.pressed[event.key] = False

        elif event.type == pygame.MOUSEBUTTONDOWN:
            #vérfication si la souris a touché le bouton play
            if play_button_rect.collidepoint(event.pos):
                #mettre le jeu en mode lancer
                Game.is_playing = True
